    <!-- Script para valida√ß√£o de campos num√©ricos -->
    <script>
        // Fun√ß√£o para for√ßar valores min/max em campos num√©ricos
        function enforceMinMax(input) {
            const min = parseInt(input.getAttribute('min'));
            const max = parseInt(input.getAttribute('max'));
            let value = parseInt(input.value);
            
            // Se o valor n√£o for um n√∫mero, define como valor m√≠nimo
            if (isNaN(value)) {
                input.value = min;
                return;
            }
            
            // Ajusta o valor se estiver fora dos limites
            if (value < min) {
                input.value = min;
            } else if (value > max) {
                input.value = max;
            }
        }
        
        // Adiciona event listeners para campos num√©ricos quando o DOM estiver carregado
        document.addEventListener('DOMContentLoaded', function() {
            const numberInputs = document.querySelectorAll('input[type="number"]');
            
            numberInputs.forEach(input => {
                // Valida√ß√£o durante a digita√ß√£o
                input.addEventListener('input', function() {
                    enforceMinMax(this);
                });
                
                // Valida√ß√£o quando perde o foco
                input.addEventListener('blur', function() {
                    enforceMinMax(this);
                });
                
                // Valida√ß√£o de teclas pressionadas
                input.addEventListener('keydown', function(e) {
                    // Teclas permitidas: n√∫meros, backspace, delete, tab, escape, enter, setas
                    const allowedKeys = [8, 9, 27, 13, 46, 37, 38, 39, 40];
                    const isNumber = (e.keyCode >= 48 && e.keyCode <= 57) || (e.keyCode >= 96 && e.keyCode <= 105);
                    
                    // Bloqueia teclas n√£o permitidas
                    if (!allowedKeys.includes(e.keyCode) && !isNumber && !e.ctrlKey) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
    
